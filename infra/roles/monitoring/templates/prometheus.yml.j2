global:
  scrape_interval: {{ scrape_interval }}
  evaluation_interval: {{ evaluation_interval }}

rule_files:
  # - "first_rules.yml"
  # - "second_rules.yml"

scrape_configs:
  # Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  # Load Balancer monitoring
{% if load_balancer_hosts %}
  - job_name: 'load_balancer'
    static_configs:
      - targets:
{% for host in load_balancer_hosts %}
        - '{{ hostvars[host]["ansible_host"] }}:{{ node_exporter_port }}'
{% endfor %}
    scrape_interval: {{ scrape_interval }}
    metrics_path: /metrics
{% endif %}

  # API Servers monitoring
{% if api_server_hosts %}
  - job_name: 'api_servers'
    static_configs:
      - targets:
{% for host in api_server_hosts %}
        - '{{ hostvars[host]["ansible_host"] }}:{{ node_exporter_port }}'
{% endfor %}
    scrape_interval: {{ scrape_interval }}
    metrics_path: /metrics
{% endif %}

  # PostgreSQL monitoring
{% if postgres_hosts %}
  - job_name: 'postgresql'
    static_configs:
      - targets:
{% for host in postgres_hosts %}
        - '{{ hostvars[host]["ansible_host"] }}:{{ node_exporter_port }}'
{% endfor %}
    scrape_interval: {{ scrape_interval }}
    metrics_path: /metrics
{% endif %}

  # Valkey (Redis) monitoring
{% if valkey_hosts %}
  - job_name: 'valkey'
    static_configs:
      - targets:
{% for host in valkey_hosts %}
        - '{{ hostvars[host]["ansible_host"] }}:{{ node_exporter_port }}'
{% endfor %}
    scrape_interval: {{ scrape_interval }}
    metrics_path: /metrics
{% endif %}

  # Bulbul Application metrics
{% if api_server_hosts %}
  - job_name: 'bulbul_app'
    static_configs:
      - targets:
{% for host in api_server_hosts %}
        - '{{ hostvars[host]["ansible_host"] }}:{{ api_server_port }}'
{% endfor %}
    scrape_interval: {{ scrape_interval }}
    metrics_path: /metrics
{% endif %}
