# Bulbul API Server Environment Configuration

# Server configuration
PORT={{ api_server_port }}
GIN_MODE={{ gin_mode }}
LOG_LEVEL={{ log_level }}
LOG_FORMAT={{ log_format }}

# PostgreSQL Database configuration
DB_HOST={{ postgres_host }}
DB_PORT={{ postgres_port }}
DB_USER={{ postgres_user }}
DB_PASSWORD={{ postgres_password }}
DB_NAME={{ postgres_database }}
DB_SSLMODE={{ postgres_sslmode }}
DB_MAX_OPEN_CONNS={{db_max_open_conns}}

# External services configuration
TICKETING_SERVICE_URL={{ ticketing_service_url }}
TICKETING_TIMEOUT_SEC={{ service_timeout_sec }}

PAYMENT_GATEWAY_URL={{ payment_gateway_url }}
PAYMENT_TEAM_SLUG={{ payment_team_slug }}
PAYMENT_PASSWORD={{ payment_password }}
PAYMENT_TIMEOUT_SEC={{ service_timeout_sec }}

# Valkey configuration used by API for BasicAuth cache
VALKEY_ADDR={{ valkey_host }}:{{ valkey_port }}
VALKEY_PASSWORD={{ valkey_password }}
VALKEY_CLIENT_CACHE_SIZE_MB={{ valkey_client_cache_size_mb }}
VALKEY_AUTH_CACHE_TTL_MIN={{ valkey_auth_cache_ttl_min }}
VALKEY_EVENTS_CACHE_TTL_MIN={{ valkey_events_cache_ttl_min }}
PPROF_ENABLED=true